<UserControl x:Class="CSharp_RabbitMQ_Demo.Views.SendMsgView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSharp_RabbitMQ_Demo.Views"
             mc:Ignorable="d"
             Width="Auto" Height="Auto"
             HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Send Message" FontSize="16" FontWeight="Bold"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,12,0,12">
            <TextBlock Text="Host:" 
                       VerticalAlignment="Center" 
                       FontSize="14" 
                       Margin="5,0,12,0"/>
            <TextBox MinWidth="250"
                     Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     FontSize="14"
                     Margin="5,0,5,0"/>
            <TextBlock Text="Queue:" 
                       VerticalAlignment="Center" 
                       FontSize="14" 
                       Margin="5,0,12,0"/>
            <TextBox MinWidth="250"
                     Text="{Binding QueueName, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     FontSize="14"
                     Margin="5,0,5,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,12,0,12">
            <TextBlock Text="Message:" 
                       VerticalAlignment="Center" 
                       FontSize="14" 
                       Margin="5,0,12,5"/> 
            <TextBox MinWidth="250"
                     Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     FontSize="14"
                     Margin="5,0,5,5"/>
            <Button Content="Send"
                    Command="{Binding SendCommand}"
                    FontSize="14"
                    FontWeight="Bold"
                    Padding="10,5"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="5,0,5,0"/>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <TextBlock Text="Last sent:" FontWeight="SemiBold" FontSize="14" />
            <TextBlock Text="{Binding LastSent}" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>
