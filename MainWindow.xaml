<Window x:Class="CSharp_RabbitMQ_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharp_RabbitMQ_Demo"
        mc:Ignorable="d"
        Title="CSharp RabbitMQ Demo"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <DockPanel Background="AliceBlue">
        <!-- Top Navigation (moved from SelectView) -->
        <Border DockPanel.Dock="Top" Background="#343a40" Height="60">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Send Message" Command="{Binding ShowSendMsgViewCommand}"
                        Margin="10" Padding="20,8" Foreground="White" Background="#495057" BorderBrush="Transparent"/>
                <Button Content="Receive Message" Command="{Binding ShowReceiveMsgViewCommand}"
                        Margin="10" Padding="20,8" Foreground="White" Background="#495057" BorderBrush="Transparent"/>
            </StackPanel>
        </Border>

        <!-- Main content: DataTemplate will resolve view for CurrentViewModel -->
        <ContentControl Content="{Binding CurrentViewModel}" Margin="20"/>
    </DockPanel>
</Window>
